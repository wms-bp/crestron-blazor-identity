@implements IDisposable

@inject NavigationManager NavigationManager

<RadzenPanelMenu>
<RadzenPanelMenuItem Text="Home" Icon="home" Path="/"></RadzenPanelMenuItem>
<RadzenPanelMenuItem Text="Counter" Icon="info" Path="/counter"></RadzenPanelMenuItem>
<RadzenPanelMenuItem Text="Weather" Icon="cloud" Path="/weather"></RadzenPanelMenuItem>
<RadzenPanelMenuItem Text="Auth" Icon="contact_mail" Path="/auth"></RadzenPanelMenuItem>
</RadzenPanelMenu>

@code {
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }

}